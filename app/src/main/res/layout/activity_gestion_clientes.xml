<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionClientesActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/titulo_gestion_clientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de Clientes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Nombre del Cliente -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_nombre_cliente"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:boxStrokeColor="@color/primary_orange"
        app:layout_constraintTop_toBottomOf="@id/titulo_gestion_clientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_nombre_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Cliente"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Correo Electrónico -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_correo_cliente"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="@color/primary_orange"
        app:layout_constraintTop_toBottomOf="@id/input_layout_nombre_cliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_correo_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Teléfono -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_telefono_cliente"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="@color/primary_orange"
        app:layout_constraintTop_toBottomOf="@id/input_layout_correo_cliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_telefono_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:inputType="phone"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón Guardar Cliente -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/boton_guardar_cliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Guardar Cliente"
        android:textColor="@color/white"
        app:backgroundTint="@color/primary_orange"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/input_layout_telefono_cliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de Clientes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_clientes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/boton_guardar_cliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/activity_clientes_adapter" />

</androidx.constraintlayout.widget.ConstraintLayout>